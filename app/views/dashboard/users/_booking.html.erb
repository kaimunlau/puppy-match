<div data-controller="booking-confirmation" data-booking-confirmation-booking-value="<%= booking[:booking].id %>" class="border p-2 rounded shadow">
  <%= render partial: "shared/pet", locals: { pet: booking[:pet] } %>
  <p><%= booking[:booking][:start_date].strftime('%d %b \'%y') %> - <%= booking[:booking][:end_date].strftime('%d %b \'%y') %></p>
  <p>Total: <%= booking[:total_price] %>â‚¬</p>
  <p data-booking-confirmation-target="status">Status: <%= booking[:booking].status %></p>
  <% if booking[:booking].pet.user == current_user && booking[:booking].status == "pending" %>
    <div data-booking-confirmation-target="btns" class="d-flex justify-content-between">
      <button data-action="click->booking-confirmation#confirm" data-status="confirmed" class="btn btn-primary">Confirm</button>
      <button data-action="click->booking-confirmation#confirm" data-status="rejected" class="btn btn-warning">Decline</button>
    </div>
  <% end %>
</div>
