<div class="container mt-4">
    <!-- Pet Details -->
  <div class="d-flex gap-4 ">
    <%= cl_image_tag @pet.photo.key, width: 700, crop: :fill, class: "rounded" %>
    <div class="d-flex flex-column justify-content-between gap-4">
      <%= render "detailed_card" do %>
        <h1>Hey coucou, I'm <strong><%= @pet.name %></strong></h1>
        <br>
        <p><strong>🏠 J'habite à </strong>:</p>
        <p><%= @pet.user.city.capitalize %>, <%= @pet.user.zipcode %></p>
        <p>et je vais booster ton potentiel de séduction 💘 </p>
        <p><strong>Qui-suis-je?</strong></p>
        <p><%= @pet.description %></p>
      <% end %>
      <%= render "detailed_card" do %>
        <h4><strong><%= @pet.price %>€ </strong>par jour</h4>
      <% end %>
      <%= render "detailed_card" do %>
      <div class="d-flex justify-content-around">
        <%= link_to 'Book me!', 'toto', class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
    </div>
</div>
