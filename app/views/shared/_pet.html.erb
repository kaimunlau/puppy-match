<div class="card border-0 mb-3 overflow-hidden shadow" style="max-width: 350px; min-height:410px;">
    <%= cl_image_tag pet.photo.key, height: 250, width: 350, crop: :fill %>
  <div class="card-body d-flex flex-column justify-content-between">
    <div>
      <h5 class="card-title"><Strong><%= pet.name %></Strong></h5>
      <p><%= truncate(pet.description, length: 60, separator: ' ', omission: ' (...)') %>
    </div>
    <div class="d-flex justify-content-between">
      <p><Strong><%= pet.price %>â‚¬</Strong> par jour</p>
      <% unless current_page?(root_path) %>
        <div class="ms-2 d-flex gap-2">
          <%= link_to content_tag(:i, '', class: 'fas fa-edit link-primary'), edit_pet_path(pet) %>
          <%= link_to content_tag(:i,'',class: 'fas fa-trash-can  link-primary'), pet_path(pet),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }
            %>
        </div>
      <% end %>
    </div>
  </div>
</div>
